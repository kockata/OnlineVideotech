@model CommentServiceModel;

@{
    ViewData["Title"] = "Delete genre";
}

<h4>Are you sure you want to delete this comment ?</h4>

<div class="row">
    <div class="col-sm-6">
        <div class="media-body">
            <strong class="text-success">@Model.UserName</strong>
            <span class="text-muted pull-right">
                <small class="text-muted">@Model.Date</small>
            </span>
        </div>
        <div class="container break-text">
            <p class="text-justify">@Model.Comment</p>
        </div>
    </div>
</div>
<br />

<form asp-controller="Genre" asp-action="Delete" method="post">
    <input type="hidden" asp-for="@Model.MovieId" value="@Model.MovieId" class="form-control" />
    <input type="hidden" asp-for="@Model.Id" value="@Model.Id" class="form-control" />
    <div>
        <input class="btn btn-sm btn-danger" type="submit" value="Yes, delete !" />
    </div>
</form>
